<% layout('layout') -%>

<div class="pt-16">
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h1 class="text-4xl font-bold text-gray-900 mb-4">Contact Us</h1>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Ready to explore Sri Lanka? Get in touch with us to plan your perfect journey
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Contact Information -->
                <div class="space-y-8">
                    <div class="bg-white rounded-lg shadow-lg p-6">
                        <div class="flex items-center mb-4">
                            <i data-lucide="message-circle" class="h-5 w-5 mr-2 text-green-600"></i>
                            <h3 class="text-xl font-semibold">WhatsApp Contact</h3>
                        </div>
                        <p class="text-gray-600 mb-4">
                            For instant communication and quick responses, contact us via WhatsApp
                        </p>
                        <button onclick="openWhatsApp()" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md w-full transition-colors">
                            <i data-lucide="message-circle" class="h-4 w-4 mr-2 inline"></i>
                            Chat on WhatsApp
                        </button>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-white rounded-lg shadow-lg p-6">
                            <div class="flex items-center mb-2">
                                <i data-lucide="phone" class="h-5 w-5 text-green-600 mr-2"></i>
                                <h3 class="font-semibold">Phone</h3>
                            </div>
                            <p class="text-gray-600">+94 77 123 4567</p>
                        </div>

                        <div class="bg-white rounded-lg shadow-lg p-6">
                            <div class="flex items-center mb-2">
                                <i data-lucide="mail" class="h-5 w-5 text-green-600 mr-2"></i>
                                <h3 class="font-semibold">Email</h3>
                            </div>
                            <p class="text-gray-600">info@srilankaguide.com</p>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <h3 class="text-xl font-semibold mb-6">Send us a Message</h3>
                    <form class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Full Name *</label>
                                <input type="text" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Your full name">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Email Address *</label>
                                <input type="email" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="your.email@example.com">
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                            <input type="tel" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="+1 (555) 123-4567">
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Service Required</label>
                            <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
                                <option value="">Select a service</option>
                                <option value="cultural-tour">Cultural Triangle Tour</option>
                                <option value="hill-country">Hill Country Adventure</option>
                                <option value="southern-coast">Southern Coast Explorer</option>
                                <option value="complete-tour">Complete Island Tour</option>
                                <option value="wildlife-tour">Wildlife & Nature Tour</option>
                                <option value="spiritual-journey">Spiritual Journey</option>
                                <option value="custom-tour">Custom Tour Package</option>
                                <option value="airport-transfer">Airport Transfer</option>
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Message *</label>
                            <textarea required rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Please tell us about your travel plans, dates, number of travelers, and any specific requirements..."></textarea>
                        </div>

                        <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md transition-colors">
                            Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
