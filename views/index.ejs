<% layout('layout') -%>

<!-- Hero Section -->
<section class="relative min-h-screen">
    <!-- Background Image -->
    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" 
         style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');">
    </div>

    <!-- Profile Content on Image -->
    <div class="relative z-10 flex flex-col items-center justify-center min-h-screen text-white px-4 sm:px-6 lg:px-8">
        <!-- Profile Picture and Description -->
        <div class="text-center mb-8">
            <div class="relative w-48 h-48 lg:w-56 lg:h-56 mx-auto mb-6">
                <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=687&q=80" 
                     alt="Professional Chauffeur Guide" 
                     class="w-full h-full rounded-full object-cover border-4 border-green-500 shadow-2xl">
            </div>
            
            <h2 class="text-2xl lg:text-3xl font-bold mb-4">Your Professional Sri Lankan Guide</h2>
            <p class="text-base lg:text-lg mb-8 opacity-90 max-w-2xl mx-auto">
                With over two decades of experience in Sri Lankan tourism, I am dedicated to providing you with an
                unforgettable journey through our beautiful island nation. Your trusted local guide with extensive knowledge of Sri Lanka's hidden gems.
            </p>
        </div>

        <!-- Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
            <a href="/packages" class="bg-green-600 hover:bg-green-700 text-white px-8 py-3 rounded-md text-lg font-medium transition-colors text-center">
                View Packages
            </a>
            <a href="/contact" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-black px-8 py-3 rounded-md text-lg font-medium transition-colors text-center">
                Contact Us
            </a>
        </div>
    </div>
</section>

<!-- Experience Cards Section -->
<section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Experience That Speaks</h2>
            <p class="text-lg text-gray-600">Numbers that reflect our commitment to excellence</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="calendar" class="h-8 w-8 text-green-600"></i>
                </div>
                <h3 class="text-3xl font-bold text-gray-900 mb-2">20+</h3>
                <p class="text-gray-600">Years of Experience</p>
            </div>

            <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="users" class="h-8 w-8 text-green-600"></i>
                </div>
                <h3 class="text-3xl font-bold text-gray-900 mb-2">100,000+</h3>
                <p class="text-gray-600">Satisfied Travelers</p>
            </div>

            <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                <div class="bg-yellow-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="award" class="h-8 w-8 text-yellow-600"></i>
                </div>
                <h3 class="text-3xl font-bold text-gray-900 mb-2">5+</h3>
                <p class="text-gray-600">Hotel Partnerships</p>
            </div>

            <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="star" class="h-8 w-8 text-purple-600"></i>
                </div>
                <h3 class="text-3xl font-bold text-gray-900 mb-2">Toyota Premio</h3>
                <p class="text-gray-600">2010 Pearl White</p>
            </div>
        </div>
    </div>
</section>

<!-- Tourist Attractions Carousel -->
<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Popular Tourist Attractions</h2>
            <p class="text-lg text-gray-600">Explore the most beautiful destinations Sri Lanka has to offer</p>
        </div>

        <div class="relative overflow-hidden">
            <div id="carousel" class="flex transition-transform duration-500 ease-in-out">
                <div class="w-1/4 flex-shrink-0 px-2">
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                        <div class="relative h-48">
                            <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
                                 alt="Sigiriya Rock Fortress" class="w-full h-full object-cover">
                        </div>
                        <div class="p-4">
                            <h3 class="font-semibold text-gray-900 text-center">Sigiriya Rock Fortress</h3>
                        </div>
                    </div>
                </div>

                <div class="w-1/4 flex-shrink-0 px-2">
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                        <div class="relative h-48">
                            <img src="https://images.unsplash.com/photo-1605640840605-14ac1855827b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2071&q=80" 
                                 alt="Temple of the Tooth" class="w-full h-full object-cover">
                        </div>
                        <div class="p-4">
                            <h3 class="font-semibold text-gray-900 text-center">Temple of the Tooth</h3>
                        </div>
                    </div>
                </div>

                <div class="w-1/4 flex-shrink-0 px-2">
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                        <div class="relative h-48">
                            <img src="https://images.unsplash.com/photo-1578662996442-48f60103fc96?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
                                 alt="Galle Fort" class="w-full h-full object-cover">
                        </div>
                        <div class="p-4">
                            <h3 class="font-semibold text-gray-900 text-center">Galle Fort</h3>
                        </div>
                    </div>
                </div>

                <div class="w-1/4 flex-shrink-0 px-2">
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                        <div class="relative h-48">
                            <img src="https://images.unsplash.com/photo-1549366021-9f761d040a94?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
                                 alt="Yala National Park" class="w-full h-full object-cover">
                        </div>
                        <div class="p-4">
                            <h3 class="font-semibold text-gray-900 text-center">Yala National Park</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
