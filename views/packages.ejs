<% layout('layout') -%>

<div class="pt-16">
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h1 class="text-4xl font-bold text-gray-900 mb-4">Tour Packages</h1>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Choose from our carefully crafted tour packages designed to showcase the best of Sri Lanka
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Package 1 -->
                <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                    <div class="relative h-48">
                        <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
                             alt="Cultural Triangle Tour" class="w-full h-full object-cover">
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Cultural Triangle Tour</h3>
                        <div class="flex items-center text-gray-600 mb-3">
                            <i data-lucide="clock" class="h-4 w-4 mr-1"></i>
                            <span class="text-sm">3 Days</span>
                            <span class="mx-2">•</span>
                            <span class="text-lg font-bold text-green-600">$150</span>
                        </div>
                        <p class="text-gray-600 text-sm mb-4">Explore the ancient cities of Anuradhapura, Polonnaruwa, and the magnificent Sigiriya Rock Fortress.</p>
                        <button class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md transition-colors">View Details</button>
                    </div>
                </div>

                <!-- Package 2 -->
                <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                    <div class="relative h-48">
                        <img src="https://images.unsplash.com/photo-1605640840605-14ac1855827b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2071&q=80" 
                             alt="Hill Country Adventure" class="w-full h-full object-cover">
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Hill Country Adventure</h3>
                        <div class="flex items-center text-gray-600 mb-3">
                            <i data-lucide="clock" class="h-4 w-4 mr-1"></i>
                            <span class="text-sm">4 Days</span>
                            <span class="mx-2">•</span>
                            <span class="text-lg font-bold text-green-600">$200</span>
                        </div>
                        <p class="text-gray-600 text-sm mb-4">Experience the cool climate and stunning landscapes of Sri Lanka's hill country including Kandy, Nuwara Eliya, and Ella.</p>
                        <button class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md transition-colors">View Details</button>
                    </div>
                </div>

                <!-- Package 3 -->
                <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                    <div class="relative h-48">
                        <img src="https://images.unsplash.com/photo-1586500036706-41963de24d8b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
                             alt="Southern Coast Explorer" class="w-full h-full object-cover">
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Southern Coast Explorer</h3>
                        <div class="flex items-center text-gray-600 mb-3">
                            <i data-lucide="clock" class="h-4 w-4 mr-1"></i>
                            <span class="text-sm">3 Days</span>
                            <span class="mx-2">•</span>
                            <span class="text-lg font-bold text-green-600">$180</span>
                        </div>
                        <p class="text-gray-600 text-sm mb-4">Discover the beautiful southern coast with its pristine beaches, historic Galle Fort, and wildlife at Yala National Park.</p>
                        <button class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md transition-colors">View Details</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
